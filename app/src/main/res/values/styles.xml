<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <style name="AppTheme.NoActionBarStart">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/start_gradient</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>



    <style name="Custom.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorSteel</item>
        <item name="android:textSize">12.5sp</item>
        <item name="colorAccent">@color/colorSilver</item>
        <item name="colorControlNormal">@color/colorSilver</item>
        <item name="colorControlActivated">@color/colorSilver</item>

        <item name="android:textColorHighlight">@color/colorSilver</item>
        <item name="android:textColorLink">@color/colorWatermelon</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWatermelon</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHighlight">@color/colorSilver</item>
        <item name="android:textColorLink">@color/colorWatermelon</item>
    </style>

</resources>
