<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">







    <RelativeLayout
        android:id="@+id/user_info_relative"
        android:background="@drawable/start_gradient"
        android:layout_width="match_parent"
        android:layout_height="180dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/profile_image"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorSteel"
            android:src="@drawable/user_three"
            android:layout_width="120dp"
            android:layout_height="120dp"/>


        <TextView

            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:id="@+id/user_name_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>


    <ScrollView
        android:layout_above="@+id/log_out_linear"
        android:layout_below="@+id/user_info_relative"
        android:scrollbarThumbVertical="@color/colorTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/activity_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_activity_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="16sp"
                    android:text="@string/activity"
                    android:textColor="@color/colorSteel"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/task_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/task_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="16sp"
                    android:text="@string/tasks"
                    android:textColor="@color/colorSteel"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/messages_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/messages_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="16sp"
                    android:text="@string/messages"
                    android:textColor="@color/colorSteel"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/workspaces_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_workspaces_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="16sp"
                    android:text="@string/workspaces"
                    android:textColor="@color/colorSteel"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/contract_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/contacts_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="16sp"
                    android:text="@string/contacts"
                    android:textColor="@color/colorSteel"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>




        </LinearLayout>


    </ScrollView>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/log_out_linear"
        android:background="@color/colorSilver"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">


        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textSize="16sp"
            android:text="@string/sign_out"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>






</RelativeLayout>